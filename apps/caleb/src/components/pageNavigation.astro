---
import type { Page } from '@sferg989/astro-utils';

interface Props {
  pages: Array<Pick<Page, 'title' | 'slug'>>;
}

const { pages } = Astro.props;
---

{
  pages.length > 0 && (
    <nav aria-label="Other pages" class="page-navigation">
      <div class="shark-background">
        <div class="sunset-particles"></div>
        <div class="orange-flow"></div>
      </div>
      <h2>ðŸ¦ˆ Explore More Waters</h2>
      <ul>
        {pages.map((page) => (
          <li>
            <a href={`/${page.slug}`}>
              <span class="link-content">{page.title}</span>
            </a>
          </li>
        ))}
      </ul>
    </nav>
  )
}

<style>
  .page-navigation {
    margin-top: 3rem;
    padding: 2rem;
    background: rgba(26, 26, 26, 0.85);
    border-radius: var(--border-radius);
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(255, 107, 53, 0.4);
    box-shadow:
      0 0 30px rgba(255, 107, 53, 0.4),
      0 0 60px rgba(255, 140, 66, 0.3);
    backdrop-filter: blur(10px);
  }

  .shark-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
  }

  .sunset-particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      radial-gradient(4px 4px at 20px 30px, var(--accent-coral), rgba(0,0,0,0)),
      radial-gradient(5px 5px at 40px 70px, var(--accent-sunset), rgba(0,0,0,0)),
      radial-gradient(3px 3px at 50px 160px, var(--accent-orange), rgba(0,0,0,0)),
      radial-gradient(4px 4px at 90px 40px, var(--accent-coral), rgba(0,0,0,0));
    background-repeat: repeat;
    background-size: 250px 250px;
    opacity: 0.5;
    animation: navSunsetShimmer 5s infinite;
  }

  .orange-flow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      ellipse at center,
      rgba(255, 107, 53, 0.15) 0%,
      rgba(255, 140, 66, 0.12) 50%,
      transparent 100%
    );
    animation: navOrangeFlow 10s ease-in-out infinite;
    filter: blur(8px);
  }

  .page-navigation h2 {
    margin-top: 0;
    color: var(--accent-orange);
    text-align: center;
    font-size: 2rem;
    position: relative;
    z-index: 1;
    text-shadow:
      0 0 20px rgba(255, 107, 53, 0.6),
      0 0 40px rgba(255, 107, 53, 0.4);
    background: linear-gradient(45deg, var(--accent-orange), var(--accent-coral));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .page-navigation ul {
    list-style: none;
    padding: 0;
    margin: 2rem 0 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    position: relative;
    z-index: 1;
  }

  .page-navigation a {
    display: block;
    padding: 1.2rem;
    background: rgba(45, 55, 72, 0.8);
    border-radius: var(--border-radius);
    border: 1px solid rgba(255, 107, 53, 0.3);
    box-shadow:
      0 4px 20px rgba(255, 107, 53, 0.3),
      0 0 30px rgba(255, 140, 66, 0.2);
    transition: all 0.3s var(--shark-timing);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(4px);
  }

  .link-content {
    position: relative;
    z-index: 1;
    color: var(--text-primary);
    font-weight: bold;
    text-shadow: 0 0 10px rgba(255, 107, 53, 0.5);
    transition: all 0.3s var(--shark-timing);
  }

  .page-navigation a::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg,
      rgba(255, 107, 53, 0.1),
      rgba(255, 140, 66, 0.1)
    );
    opacity: 0;
    transition: all 0.3s var(--shark-timing);
  }

  .page-navigation a:hover {
    transform: translateY(-4px) scale(1.02);
    border-color: rgba(255, 107, 53, 0.5);
    box-shadow:
      0 8px 30px rgba(255, 107, 53, 0.5),
      0 0 50px rgba(255, 140, 66, 0.4);
  }

  .page-navigation a:hover .link-content {
    color: var(--accent-orange);
    text-shadow:
      0 0 20px rgba(255, 107, 53, 0.8),
      0 0 40px rgba(255, 107, 53, 0.5);
  }

  .page-navigation a:hover::before {
    opacity: 1;
  }

  @keyframes navSunsetShimmer {
    0%, 100% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.1);
    }
  }

  @keyframes navOrangeFlow {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1) rotate(0deg);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.2) rotate(3deg);
    }
  }

  @media (max-width: 768px) {
    .page-navigation {
      padding: 1.5rem;
    }

    .page-navigation ul {
      grid-template-columns: 1fr;
    }

    .page-navigation h2 {
      font-size: 1.5rem;
    }
  }
</style>
