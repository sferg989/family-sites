---
import { Footer as SharedFooter } from '@sferg989/astro-utils';

interface Props {
  publishedDate?: Date | null
  updatedDate?: Date | null
}

const { publishedDate, updatedDate } = Astro.props;

// Convert null to undefined for compatibility with shared component
const sharedFooterProps = {
  name: "Caleb Ferguson",
  publishedDate: publishedDate ?? undefined,
  updatedDate: updatedDate ?? undefined
};
---

<SharedFooter {...sharedFooterProps} />
