---

import type { Page } from '@sferg989/astro-utils';
import { VideoDisplay } from '@sferg989/astro-utils';

interface Props {
  page: Page;
}

const { page } = Astro.props;
---

<div class="page-content">
  <div class="content-wrapper">
    {page.body && (
      <div
        set:html={page.body.html}
        class="prose prose-lg max-w-none mb-8"
      />
    )}

    {page.highlights?.length > 0 && (
      <VideoDisplay videos={page.highlights} title="Highlights" />
    )}

    <nav class="mt-8 text-center" aria-label="Back to homepage">
      <a href="/" class="inline-block py-2 px-4 text-primary hover:underline">
        &larr; Back to homepage
      </a>
    </nav>
  </div>
</div>

<style>
  .content-wrapper {
    width: var(--content-width);
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: 2rem;
  }

  .prose :global(img) {
    border-radius: 0.5rem;
    margin: 2rem auto;
    max-width: 100%;
    height: auto;
  }

  .prose :global(h2) {
    margin-top: 2rem;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .prose :global(p) {
    margin: 1rem 0;
    line-height: 1.75;
  }


</style>
